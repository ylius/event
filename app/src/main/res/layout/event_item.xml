<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/event_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="Roboto"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/event_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="Roboto"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/event_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:maxLines="2"
        android:text="test title"
        android:textColor="#2A3C30"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/event_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="Roboto"
        android:maxLines="2"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/event_item_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6EA" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/event_repost_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/repost" />

        <TextView
            android:id="@+id/event_repost_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/event_comment_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comments" />

        <TextView
            android:id="@+id/event_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/event_good_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like" />

        <TextView
            android:id="@+id/event_good_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>